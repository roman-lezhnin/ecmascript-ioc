{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "outDir": "dist",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "useDefineForClassFields": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "docs", "dist", "src/__tests__"]
}
